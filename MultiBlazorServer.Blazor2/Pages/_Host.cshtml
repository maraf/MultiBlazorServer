@page "/"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blazor2</title>
    <base href="~/" />
</head>
<body>
    <blazor2>
        <component type="typeof(MultiBlazorServer.Blazor2.Blazor2)" render-mode="ServerPrerendered" />
    </blazor2>

    <div id="blazor-error-ui" style="display: none">
        Error
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
